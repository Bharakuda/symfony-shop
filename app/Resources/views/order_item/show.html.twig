{% extends 'base.html.twig' %}

{% block body %}
    <h1>Order_Item</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order_Item.id }}</td>
            </tr>
            <tr>
                <th>Customerorderid</th>
                <td>{{ order_Item.customerOrderId }}</td>
            </tr>
            <tr>
                <th>Productid</th>
                <td>{{ order_Item.productId }}</td>
            </tr>
            <tr>
                <th>Producttitle</th>
                <td>{{ order_Item.productTitle }}</td>
            </tr>
            <tr>
                <th>Qty</th>
                <td>{{ order_Item.qty }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ order_Item.price }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('order_item_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('order_item_edit', { 'id': order_Item.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
